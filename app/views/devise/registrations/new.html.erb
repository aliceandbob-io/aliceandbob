<div class="container-fluid">
  <div class="devise-page">
    <div class="mb-5 text-center">
      <h1>aliceandbob.io</h1>
      <%= image_tag('favicon.png', size: "50x50") %>
    </div>
    <div class="devise-block">
      <div class="row">
        <div class="col-sm-12 col-md-6 m-auto">
          <div class="card text-white bg-dark mb-3">
            <div class="card-body">

              <h2 class="mb-5">Sign up</h2>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="form-group">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                </div>

                <div class="form-group">
                  <%= f.label :password %>
                  <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                  <% if @minimum_password_length %>
                    <small class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small>
                  <% end %><br />
                </div>

                <div class="form-group">
                  <%= f.label :password_confirmation %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                </div>

                <div class="form-group mb-5">
                  <%= f.submit "Sign up", class: "btn btn-primary" %>
                </div>
              <% end %>

              <%= render "devise/shared/links" %>
              <%= link_to "< Back to home", root_path, data: { turbolinks: false }, class: "card-link float-right" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
